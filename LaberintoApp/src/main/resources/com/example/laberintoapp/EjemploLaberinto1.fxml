<Pane prefHeight="665.0" prefWidth="1020.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laberintoapp.EjemploLaberinto1Controller">
   <children>
      <ImageView fitHeight="665.0" fitWidth="1020.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Imagenes/FondoEjemplos.jpg" />
         </image>
      </ImageView>
      <!-- Título -->
      <Label layoutX="236.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Ejemplo 1" />

      <!-- Imagen del laberinto -->
      <ImageView fitHeight="307.0" fitWidth="446.0" layoutX="83.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Imagenes/GrafoLaberintoEjemplo1.jpg" />
         </image>
      </ImageView>

      <!-- Resumen -->
      <VBox layoutX="83.0" layoutY="454.0" spacing="10">
         <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Resumen" />
         <Label fx:id="numeroNodos" style="-fx-font-size: 18px;" text="Número de Nodos:" />
