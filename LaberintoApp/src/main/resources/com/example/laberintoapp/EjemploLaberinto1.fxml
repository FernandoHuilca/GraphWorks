      <VBox layoutX="556.0" layoutY="82.0" prefHeight="320.0" prefWidth="377.0" spacing="10">
         <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="La traza de la pila es:">
            <font>
               <Font name="Arial Black" size="12.0" />
            </font></Label>
         <ListView fx:id="trazaPila" prefHeight="280.0" prefWidth="389.0" />
      </VBox>
      <Button fx:id="btnRegresarMenuPrincipal" layoutX="902.0" layoutY="29.0" mnemonicParsing="false" onAction="#regresarInterfazMenuPrincipal" text="Regresar" />
      <Label layoutX="556.0" layoutY="424.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="El camino de salida es:" />
      <HBox fx:id="hbox" layoutX="556.0" layoutY="475.0" prefHeight="38.0" prefWidth="377.0" spacing="10.0" />
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</Pane>
