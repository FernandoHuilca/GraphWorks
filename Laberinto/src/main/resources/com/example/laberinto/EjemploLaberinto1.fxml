<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="677.0" prefWidth="1020.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laberinto.EjemploLaberinto1Controller">
   <children>
      <!-- Título -->
      <Label layoutX="131.0" layoutY="20.0" text="Ejemplo 1" style="-fx-font-size: 30px; -fx-font-weight: bold;" />

      <!-- Imagen del laberinto -->
      <ImageView fitHeight="320.0" fitWidth="402.0" layoutX="34.0" layoutY="70.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Imagenes/LaberintoEjemplo1.jpg" />
         </image>
      </ImageView>

      <!-- Resumen -->
      <VBox layoutX="34.0" layoutY="400.0" spacing="10">
         <Label text="Resumen" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
         <Label fx:id="numeroNodos" text="Número de Nodos: 26" style="-fx-font-size: 18px;" />
         <Label fx:id="numeroAristas" text="Número de Aristas: 25" style="-fx-font-size: 18px;" />
         <Label fx:id="tiempoEjecucion" text="Tiempo de Ejecución: 6 ms" style="-fx-font-size: 18px;" />
      </VBox>

      <!-- Traza de la Pila -->
      <VBox layoutX="510.0" layoutY="70.0" prefHeight="320.0" prefWidth="423.0" spacing="10">
         <Label text="La traza de la pila es:" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
         <ListView fx:id="trazaPila" />
      </VBox>

      <!-- Camino de Salida -->
      <VBox layoutX="510.0" layoutY="400.0" prefHeight="250.0" prefWidth="423.0" spacing="10">
         <Label text="El camino de salida es:" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
         <ListView fx:id="caminoSalida" />
      </VBox>
   </children>
</Pane>
